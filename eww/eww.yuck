(defwindow bar
:monitor 0
:exclusive true
:wm-ignore false
:stacking "bg"
:geometry (geometry :x "0px" :y "4px" :width "100%" :height "3%" :anchor "top center")
(widgets))

(defwidget widgets []
(box :orientation "h" :space-evenly false :spacing 10
(left)
(leftmiddle)
(rightmiddle)
(right)))

(defwidget right []
(box :class "time" :orientation "h"
time))

(defwidget rightmiddle []
(box :class "rightmiddle" :hexpand false
"Ôãõ"(label :text "${round(EWW_CPU.avg, 0)}%")
"ÔÇÆ"(label :text "${round(EWW_RAM.used_mem_perc, 0)}%")
(image :path "img/battery.png" :image-height 14)
battery))

(defwidget leftmiddle []
(box :class "leftmiddle" :orientation "h" :hexpand true
{music != "" ? "${music}" : ""}))

(defwidget left []
(box :class "menu" :orientation "h" :space-evenly true :hexpand false :spacing 15
(button :onclick "shutdown now" :class "shutdown" "Ôùª")
(button :onclick "shutdown -r now" "Ôää")
(button :onclick "(dolphin ~)" "ÔÑî")))

(deflisten music
:initial "Nothing Playing Right Now"
"playerctl --follow metadata --format 'üéú  {{artist}} - {{title}}' || true")

(defpoll time :interval "1s"
"date '+%H:%M  %b %d'")

(defpoll battery :interval "1s"
"scripts/battery")
